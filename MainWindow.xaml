<Window x:Class="EnumToJSObject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnumToJSObject"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="Enum to JS Object" Height="450" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/object.png">
    <Grid>
        <Button x:Name="importFileBtn" Content="Import C# enum" Background="Lavender" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 100, 0, 0" Click="importFileBtn_Click" />
        <Image Source="/object.png" Width="150" Height="150" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" />
        <TextBlock x:Name="resultText" Visibility="Hidden" Text="Debug text" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0, 0, 0, 50"
                   FontWeight="Medium"
                   Foreground="LightBlue"
                   MaxWidth="250"
                   TextAlignment="Center"
                   TextWrapping="Wrap"/>
    </Grid>
</Window>
